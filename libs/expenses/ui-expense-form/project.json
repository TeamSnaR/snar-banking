{
  "name": "expenses-ui-expense-form",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/expenses/ui-expense-form/src",
  "prefix": "snarbanking-workspace",
  "tags": ["scope:expenses", "domain:expenses", "type:ui"],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/expenses/ui-expense-form/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/expenses/ui-expense-form/**/*.ts",
          "libs/expenses/ui-expense-form/**/*.html"
        ]
      }
    }
  }
}
